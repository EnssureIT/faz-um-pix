{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "lib": ["es2016",
      "dom"],
    "baseUrl": "./src",
    "paths": {
      "faz-um-pix": ["."]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
